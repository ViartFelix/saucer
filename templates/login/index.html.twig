{% extends "base.twig" %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('build/login_css.css') }}">
{% endblock %}

{% block body %}
	<main class="container container-full container-translate">
		<h1>Login</h1>

		{% if error %}
			<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<form action="{{ path('app_login') }}" method="post">
			<div class="form-container">
				<div class="single-input">
					<label for="username">Email</label>
					<input class="target-input" type="text" id="username" name="_username" value="{{ last_username }}">
				</div>

				<hr class="vertical">

				<div class="single-input">
					<label for="password">Password</label>
					<input class="target-input" type="password" id="password" name="_password">
				</div>
			</div>


			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<div class="actions-buttons">
				<button class="btn btn-large login-btn" type="submit">
					<span class="iconify" data-icon="material-symbols:login"></span>
					Login
				</button>

				<a class="btn btn-large forgot-btn" href="{{ path('app_forgot_password_request') }}">
					<span class="iconify" data-icon="mdi:forgot-password"></span>
					Forgot password ?
				</a>
			</div>

		</form>
	</main>

{% endblock %}
