<div class="filters">
	{{ form_start(form) }}

	<ul>
		{{ form_errors(form) }}
	</ul>

	<div class="form-double-col">
		<div class="form-row row-title">
			<div data-i="title" id="i-title">
				<div class="single-input">
					<label> {{ form.title.vars.label }} </label>
					{{ form_widget(form.title) }}
				</div>
			</div>


			<div data-i="description" id="i-desc">
				<div class="single-input">
					<label> {{ form.description.vars.label }} </label>
					{{ form_widget(form.description) }}
				</div>
			</div>
		</div>

		<hr class="vertical">

		<div class="form-row row-timings">
			<div class="single-input" id="i-prep-min" style="grid-area: 1/1/2/2">
				<label> {{ form.prepTimeMin.vars.label }} </label>
				{{ form_widget(form.prepTimeMin) }}
			</div>

			<div class="single-input" id="i-prep-max" style="grid-area: 1/2/2/3">
				<label> {{ form.prepTimeMax.vars.label }} </label>
				{{ form_widget(form.prepTimeMax) }}
			</div>

			<hr style="grid-area: 2/1/3/3">

			<div class="single-input" id="i-prep-max" style="grid-area: 3/1/4/2">
				<label> {{ form.cookTimeMin.vars.label }} </label>
				{{ form_widget(form.cookTimeMin) }}
			</div>

			<div class="single-input" id="i-prep-max" style="grid-area: 3/2/4/3">
				<label> {{ form.cookTimeMax.vars.label }} </label>
				{{ form_widget(form.cookTimeMax) }}
			</div>
		</div>
	</div>

	<hr>
	<!--https://alvinbunk.wordpress.com/2017/04/14/display-checkbox-group-properly-in-twig/-->

	<div class="form-selects">
		<div class="ustensils selected-row">
			{{ form_label(form.ustensils) }}
			{{ form_widget(form.ustensils) }}
		</div>

		<hr class="vertical">

		<div class="ingredients selected-row">
			{{ form_label(form.ingredients) }}
			{{ form_widget(form.ingredients) }}
		</div>

	</div>

	<hr>

	<div class="form-actions">
		<button title="Submit filters" id="recipes_filters_filtrer" class="target-submit btn btn-large action-btn" type="submit" name="recipes_filters[filtrer]">
			<span class="iconify" data-icon="material-symbols:send"></span>
		</button>

		<a title="Reset fields" class="reset-filters btn btn-large action-btn" href="{{ path('app_recipes') }}">
			<span class="iconify" data-icon="system-uicons:reset-alt"></span>
		</a>
	</div>

		<div style="display: grid; grid-template-columns: 1fr 1fr;">
			<div>

			</div>
			<div>

			</div>
		</div>


		{{ form_row(form._token) }}

	{{ form_end(form, {'render_rest': false}) }}
</div>